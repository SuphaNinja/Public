generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement())
  title String
  description String
  imageUrl String
  user User @relation(fields: [userId], references: [id])
  userId Int
  userName String?
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  userName String @unique
  email String @unique
  password String
  personalData PersonalData[]
  posts Post[]
}

model PersonalData {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  profileImageUrl String
}

model DropImage {
  id Int @id @default(autoincrement())
  fileName String
  filePath String
}